<!-- header -->
  <header class="clearfix">
    <%= link_to root_path do %>
      <%= image_tag "/images/logo.png", class: "header-logo", :size => "230x90" %>
    <% end %>
    <nav class="navbar-default nav-list" style="background-color: #272e34;">
      <div class="navbar-header" style="padding-top: 20px;">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#gnavi" style="background-color: #272e34;border-radius:  1px solid white;">
          <span class="sr-only">メニュー</span>
          <span class="icon-bar" style="background-color: white;"></span>
          <span class="icon-bar" style="background-color: white;"></span>
          <span class="icon-bar" style="background-color: white;"></span>
        </button>
      </div>

      <div id="gnavi" class="collapse navbar-collapse">
        <ul class="nav navbar-nav nav-list">
          <% if user_signed_in? %>
            <li class="nav-list-item"><%= link_to "マイページ", user_path(current_user.id), :style=> "text-decoration: none; color:#a9a9a9;padding-top:40px;" %></li>
            <li class="nav-list-item"><%= link_to "ログアウト", destroy_user_session_path, method: :delete, :style => "text-decoration: none; color:#a9a9a9;padding-top:40px;" %></li>
          <% else %>
            <li class="nav-list-item"><%= link_to "ログイン", new_user_session_path, :style => "text-decoration: none; color:#a9a9a9;padding-top: 40px;" %></li>
            <li class="nav-list-item"><%= link_to "新規会員登録", new_user_registration_path, :style => "text-decoration: none; color:#a9a9a9; padding-top:40px;" %></li>
          <% end %>
        </ul>
      </div>
    </nav>
    
  </header>
</nav>
