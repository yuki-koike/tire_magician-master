<!DOCTYPE html>
<html>
<head>
  <title></title>
</head>
<body>
  <!-- header -->
  <%= render 'sizes/header' %>

  <main>
    <div class="container">
        <div class="select">
          <div class="dropdown">
            <button class="btn btn-success dropdown-toggle" type="button" data-toggle="dropdown">サイズを選択してください
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">

              <% @sizes.each do |size| %>
                <li><%= link_to size.sub(/_/, '/'), manufacture_path(size) %></li>
              <% end %>
            </ul>
            <!-- <a class="btn btn-default" data-toggle="collapse" href="#collapseExample">車種から探す</a> -->
            <!-- モーダルボタン -->
            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#sampleModal">タイヤサイズの確認方法</button>
          </div>


            <!-- モーダルの内容 -->
            <div class="modal fade" id="sampleModal" tabindex="-1">
              <div class="modal-dialog" style="height: 500px; width: 800px;">
                <div class="modal-content">
                  <div class="modal-header">現在のお車のタイヤの側面をご確認ください
                    <button type="button" class="close" data-dismiss="modal"><span>×</span></button>
                </div>
                <div class="modal-body">
                  <div class="" style="background-image: url(/images/tire_size.jpeg); background-size: cover;background-position: top center; height:400px; width: 700px;"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <!-- 車種から探すボタンの内容 -->
      <div class="collapse" id="collapseExample">
        <div class="well">
          <ul class="nav nav-tabs">
            <li class="active"><a href="#sampleContentA" data-toggle="tab">トヨタ</a></li>
