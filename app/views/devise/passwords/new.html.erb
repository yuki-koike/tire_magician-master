<!-- header -->
  <%= render 'sizes/header' %>
<main>
 <div class="container">
<h2>パスワードの再設定</h2>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, "Eメールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "送信する" %>
  </div>
<% end %>

</div>
</main>
  <!-- footer -->
  <%= render 'sizes/footer' %>