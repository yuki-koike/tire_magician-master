<!DOCTYPE html>
<html>
<head>
  <title></title>
</head>
<body>

  <!-- header -->
  <%= render 'sizes/header' %>

  <main>
  <div class="container">

    <div class="row">
      <div class="col-xs-2"></div>
      <div class="col-xs-8">
        <h3>ユーザー情報変更</h3>
        <%= form_for (@user) do |t| %>
          <div class="field">
            <%= t.label :lastname, "性" %><br />
            <%= t.text_field :lastname, autofocus: true, autocomplete: "lastname" %>
          </div>
          <div class="field">
            <%= t.label :firstname, "名" %><br />
            <%= t.text_field :firstname, autofocus: true, autocomplete: "firstname" %>
          </div>
          <div class="field">
            <%= t.label :email, "Eメールアドレス" %><br />
            <%= t.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
          <div class="field">
            <%= t.label :telephone, "電話番号" %><br />
            <%= t.text_field :telephone, autofocus: true, autocomplete: "telephone" %>
          </div>
      <div style="text-align:center;padding: 40px 0;">
        <%= t.submit "変更を保存" %>
      </div>
        <% end %>
      </div>
      <div class="col-xs-2"></div>
    </div>
  </div>
  </main>

  <!-- footer -->
  <%= render 'sizes/footer' %>

</body>
</html>